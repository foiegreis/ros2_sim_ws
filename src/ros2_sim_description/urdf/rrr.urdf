<?xml version="1.0"?>
<!-- ======================================= -->
<!-- |  URDF for the RRR (3R) Robot        | -->
<!-- ======================================= -->

<robot name="rrr_description">

<!-- Material Definition -->
  <material name="white">
      <color rgba="1 1 1 0.5"/>
  </material>
  <material name="red">
      <color rgba="1 0 0 1"/>
  </material>
  <material name="orange">
      <color rgba="1 0.3 0.1 1"/>
  </material>
  <material name="blue">
      <color rgba="0.2 0.2 1 1"/>
  </material>
  <material name="black">
      <color rgba="0 0 0 1"/>
  </material>
  <material name="grey">
      <color rgba="0.5 0.5 0.5 1"/>
  </material>


<!-- ================================= -->
<!-- |  INERTIAL PROPERTIES - LINKS  | -->
<!-- ================================= -->

<!-- World link -->
<link name="world"/>

<!-- Base Link -->
<link name="base">
    <visual>
        <geometry>
        <box size="0.4 0.4 0.4"/>
        </geometry>
        <origin xyz="0 0 -0.2" rpy="0 0 0"/>
        <material name="blue"/>
    </visual>
  </link>
  
<!-- Link1 -->
<link name="link1">
    <visual>
        <origin xyz="0 0 0.4" rpy="0 0 0"/>
        <geometry>
        <cylinder length="1.0" radius="0.1"/>
        </geometry>
        <material name="grey"/>
    </visual>
</link>

<!-- sphere1-->
<link name="sphere1">
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
        <sphere radius="0.2"/>
        </geometry>
        <material name="grey"/>
    </visual>
</link>

<!-- Link2-->
<link name="link2">
    <visual>
        <origin xyz="0 0 0.5" rpy="0 0 0"/>
        <geometry>
        <cylinder length="1.0" radius="0.1"/>
        </geometry>
        <material name="grey"/>
    </visual>
</link>

<!-- sphere2-->
<link name="sphere2">
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
        <sphere radius="0.2"/>
        </geometry>
        <material name="grey"/>
    </visual>
</link>

<!-- Link3-->
<link name="link3">
    <visual>
        <origin xyz="0 0 0.5" rpy="0 0 0"/>
        <geometry>
        <cylinder length="1.0" radius="0.1"/>
        </geometry>
        <material name="grey"/>
    </visual>
</link>

<!-- Gripper Link-->
<link name="gripper">
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
        <mesh filename="package://ros2_sim_description/meshes/gripper_base.dae" scale="3 3 3"/>
        </geometry>
        <material name="grey"/>
    </visual>
</link>
<!-- ================================= -->
<!-- | KINEMATIC PROPERTIES - JOINTS | -->
<!-- ================================= -->

<!-- World_Base_Joint -->
<joint name="base_to_world" type="fixed">
    <parent link="world"/>
    <child link="base"/>
    <origin rpy="0 0 0" xyz="0 0 0.4"/>
  </joint>

<!-- Base_Link1_Joint REVOLUTE-->
<joint name="base_link1_joint" type="revolute">
    <parent link="base"/>
    <child link="link1"/>
    <axis xyz="0 0 1"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <limit effort="87" lower="-2.8973" upper="2.8973" velocity="2.1750"/>
</joint>

<!-- Link1_sphere1_Joint REVOLUTE-->
<joint name="link1_sphere1_joint" type="revolute">
    <origin rpy="0 0 0" xyz="0 0 1.05"/>
    <parent link="link1"/>
    <child link="sphere1"/>
    <axis xyz="0 1 0"/>
    <limit effort="87" lower="-2.8973" upper="2.8973" velocity="2.1750"/>
</joint>

<!-- Sphere1_Link2_Joint FIXED-->
<joint name="sphere1_link2_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0.15"/>
    <parent link="sphere1"/>
    <child link="link2"/>
</joint>

<!-- Link2_sphere2_Joint REVOLUTE-->
<joint name="link2_sphere2_joint" type="revolute">
    <origin rpy="0 0 0" xyz="0 0 1.05"/>
    <parent link="link2"/>
    <child link="sphere2"/>
    <axis xyz="0 1 0"/>
    <limit effort="87" lower="-2.8973" upper="2.8973" velocity="2.1750"/>
</joint>

<!-- Sphere2_Link3_Joint FIXED-->
<joint name="sphere2_link3_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0.15"/>
    <parent link="sphere2"/>
    <child link="link3"/>
</joint>

<!-- Link3_Grippe_Joint FIXED-->
<joint name="link3_gripper_joint" type="fixed">
    <origin rpy="0 -1.57 0" xyz="0 0 1.0"/>
    <parent link="link3"/>
    <child link="gripper"/>
</joint>


</robot>